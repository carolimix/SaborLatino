<div class="container">
    <h2>Edit {{service.name}}</h2>
    <form action="/services/{{service._id}}/edit" method="POST">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" value="{{service.name}}">

        <label for="occupation">Occupation: </label>
        <input type="text" name="occupation" id="occupation" value="{{service.description}}">

        <label for="contactInfo">Informacion de contacto: </label>
        <input type="text" name="contactInfo" id="contactInfo" value="{{service.contactInfo}}">

<label for="owner">Creado por:</label>
<input type="text" name="owner" id="owner" value="{{service.owner}}">


        <button type="submit">Guardar</button>
    </form>
</div>